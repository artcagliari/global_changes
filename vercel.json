{
  "buildCommand": "npm run build && cd server && npm run prisma:generate && cd ..",
  "outputDirectory": "dist",
  "installCommand": "npm install && cd server && npm install && cd ..",
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "server/src/**",
      "maxDuration": 30
    }
  },
  "ignore": [
    "server/node_modules",
    "server/uploads",
    "server/prisma/dev.db",
    "server/prisma/*.db",
    "server/prisma/migrations.sqlite.backup"
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/api/uploads/$1"
    },
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ]
}
