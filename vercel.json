{
  "buildCommand": "npm run build && cd server && npm run build && npx prisma generate && cd ..",
  "outputDirectory": "dist",
  "installCommand": "npm install && cd server && npm install && cd ..",
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "server/dist/**",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/upload-blob",
      "destination": "/api/upload-blob"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/[...]"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}