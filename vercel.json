{
  "buildCommand": "npm run build && cd server && npx prisma generate && cd ..",
  "outputDirectory": "dist",
  "installCommand": "npm install && cd server && npm install && cd ..",
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "server/src/**",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/api/uploads/$1"
    },
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ]
}
